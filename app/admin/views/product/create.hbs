<form method="POST" enctype="multipart/form-data">
    <div class="mb-1">
        <div class="float-xs-left">
            <a href="/admin/product/index" class="btn btn-secondary"><i class="mdi mdi-chevron-left"></i> {{__ "Back"}}</a>
        </div>
        <div class="float-xs-right">
            <a href="#" data-href="/admin/product/delete/{{product._id}}" class="btn btn-danger" data-toggle="modal" data-target="#deleteConfirmModal"><i class="mdi mdi-delete"></i> {{__ "Delete"}}</a>
            <button type="submit" class="btn btn-primary"><i class="mdi mdi-check"></i> {{__ "Save"}}</button>
        </div>
        <div class="clearfix"></div>
    </div>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="inputProductName">{{__ "Name"}}</label>
                <input name="product[name]" type="text" class="form-control" id="inputProductName" placeholder="Product name" value="{{product.name}}">
            </div>
            <div class="form-group">
                <label for="inputProductDescription">{{__ "Description"}}</label>
                <textarea name="product[description]" class="form-control js-summernote-control" id="inputProductDescription" rows="3">{{{product.description}}}</textarea>
            </div>
            <div class="form-group">
                <label for="inputProductCategory">{{__ "Categories"}}</label>
                <select name="product[category][]" class="form-control" id="inputProductCategory" multiple="multiple" size="1" style="width: 100%">
                    {{#if product.category}}
                        {{#each product.category}}
                            <option value="{{_id}}" selected="selected">{{name}}</option>
                        {{/each}}
                    {{/if}}
            </select>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="inputProductVendor">{{__ "Vendor"}}</label>
                        <select name="product[vendor]" class="form-control" id="inputProductVendor">
                            {{#if product.vendor}}
                                <option value="{{product.vendor._id}}" selected="selected">{{product.vendor.name}}</option>
                            {{/if}}
                        </select>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="inputProductShop">{{__ "Shop"}}</label>
                        <select name="product[shop]" class="form-control" id="inputProductShop">
                            {{#if product.shop}}
                                <option value="{{product.shop._id}}" selected="selected">{{product.shop.name}}</option>
                            {{/if}}
                        </select>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="inputProductPrice">{{__ "Price"}}</label>
                        <div class="input-group">
                            <input name="product[price]" type="text" class="form-control" id="inputProductPrice" placeholder="0.00" value="{{product.price}}">
                            <span class="input-group-addon">RUB</span>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="inputProductOldprice">{{__ "Old price"}}</label>
                        <div class="input-group">
                            <input name="product[oldPrice]" type="text" class="form-control" id="inputProductOldprice" placeholder="0.00" value="{{product.oldPrice}}">
                            <span class="input-group-addon">RUB</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label for="inputProductUrl">{{__ "URL"}}</label>
                <input name="product[url]" type="text" class="form-control" id="inputProductUrl" placeholder="URL" value="{{product.url}}">
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="inputProductColor">{{__ "Color"}}</label>
                        <select name="product[color][]" class="form-control" id="inputProductColor" multiple="multiple">
                        <option value="Белый">Белый</option>
                        <option value="Розовый">Розовый</option>
                        <option value="Синий">Синий</option>
                        <option value="Красный">Красный</option>
                        <option value="Черный">Черный</option>
                    </select>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="inputProductMaterial">{{__ "Material"}}</label>
                        <select name="product[material][]" class="form-control" id="inputProductMaterial" multiple="multiple">
                        <option value="Замш">Замш</option>
                        <option value="Кожа">Кожа</option>
                        <option value="Кожзам.">Кожзам.</option>
                        <option value="Хлопок">Хлопок</option>
                        <option value="Шерсть">Шерсть</option>
                    </select>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="inputProductSize">{{__ "Size"}}</label>
                        <select name="product[size][]" class="form-control" id="inputProductSize" multiple="multiple">
                        <option value="XS">XS</option>
                        <option value="S">S</option>
                        <option value="M">M</option>
                        <option value="L">L</option>
                        <option value="XL">XL</option>
                        <option value="XXL">XXL</option>
                        <option value="XXXL">XXXL</option>
                    </select>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>{{__ "Age"}}</label>
                        <div class="form-check">
                            <label class="form-check-label">
                            <input type="radio" class="form-check-input" name="product[sex]" value="0">
                            {{__ "None"}}
                        </label>
                        </div>
                        <div class="form-check">
                            <label class="form-check-label">
                            <input type="radio" class="form-check-input" name="product[sex]" value="1">
                            {{__ "Toddler"}}
                        </label>
                        </div>
                        <div class="form-check">
                            <label class="form-check-label">
                            <input type="radio" class="form-check-input" name="product[sex]" value="2">
                            {{__ "Child"}}
                        </label>
                        </div>
                        <div class="form-check">
                            <label class="form-check-label">
                            <input type="radio" class="form-check-input" name="product[sex]" value="3">
                            {{__ "Adult"}}
                        </label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>{{__ "Season"}}</label>
                        <div class="form-check">
                            <label class="form-check-label">
                            <input type="radio" class="form-check-input" name="product[sex]" value="0">
                            {{__ "None"}}
                        </label>
                        </div>
                        <div class="form-check">
                            <label class="form-check-label">
                            <input type="radio" class="form-check-input" name="product[sex]" value="1">
                            {{__ "Summer"}}
                        </label>
                        </div>
                        <div class="form-check">
                            <label class="form-check-label">
                            <input type="radio" class="form-check-input" name="product[sex]" value="2">
                            {{__ "Winter"}}
                        </label>
                        </div>
                        <div class="form-check">
                            <label class="form-check-label">
                            <input type="radio" class="form-check-input" name="product[sex]" value="3">
                            {{__ "Demi"}}
                        </label>
                        </div>
                        <div class="form-check">
                            <label class="form-check-label">
                            <input type="radio" class="form-check-input" name="product[sex]" value="4">
                            {{__ "All-season"}}
                        </label>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>{{__ "Sex"}}</label>
                        <div class="form-check">
                            <label class="form-check-label">
                            <input type="radio" class="form-check-input" name="product[sex]" value="0">
                            {{__ "None"}}
                        </label>
                        </div>
                        <div class="form-check">
                            <label class="form-check-label">
                            <input type="radio" class="form-check-input" name="product[sex]" value="1">
                            {{__ "Women"}}
                        </label>
                        </div>
                        <div class="form-check">
                            <label class="form-check-label">
                            <input type="radio" class="form-check-input" name="product[sex]" value="2">
                            {{__ "Men"}}
                        </label>
                        </div>
                        <div class="form-check">
                            <label class="form-check-label">
                            <input type="radio" class="form-check-input" name="product[sex]" value="3">
                            {{__ "Unisex"}}
                        </label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="inputProductSlug">{{__ "Slug"}}</label>
                <input name="product[slug]" type="text" class="form-control" id="inputProductSlug" placeholder="product-name-vendor-id" value="{{product.slug}}">
            </div>
            <div class="form-group">
                <label for="inputProductMetaTitle">{{__ "Meta Title"}}</label>
                <input name="product[meta][title]" type="text" class="form-control" id="inputProductMetaTitle" placeholder="Title" value="{{product.meta.title}}">
            </div>
            <div class="form-group">
                <label for="inputProductMetaDescription">{{__ "Meta Description"}}</label>
                <textarea name="product[meta][description]" class="form-control" id="inputProductMetaDescription" rows="3">{{product.meta.description}}</textarea>
            </div>
            <div class="form-group">
                <label>{{__ "Picture"}}</label> {{#if product.picture}}
                <div class="clearfix m-y-1">
                    <img src="{{pictUrl}}{{product.picture}}" style="max-height: 320px;" />
                </div>
                {{else}}
                <div class="clearfix"></div>
                {{/if}}
                <input type="hidden" name="product[picture]" value="{{product.picture.name}}" />
                <label class="custom-file">
                    <input name="image" type="file" id="image" class="custom-file-input">
                    <span class="custom-file-control"></span>
                </label>
            </div>
        </div>
    </div>
</form>
<!-- Modal -->
<div class="modal fade" id="deleteConfirmModal" tabindex="-1" role="dialog" aria-labelledby="deleteConfirmModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
                <h4 class="modal-title" id="deleteConfirmModalLabel">Are you sure?</h4>
            </div>
            <div class="modal-body">
                You are about to delete this product!
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <a href="#" class="btn btn-danger btn-ok">Delete</a>
            </div>
        </div>
    </div>
</div>