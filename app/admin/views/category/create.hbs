<form method="POST" enctype="multipart/form-data">
{{#each errors}}
{{this}}
{{/each}}
    <div class="mb-3">
        <div class="float-left">
            <a href="/admin/category/index" class="btn btn-secondary">
                <i class="mdi mdi-chevron-left"></i> {{__ "Back"}}</a>
        </div>
        <div class="float-right">
            <a href="#" data-href="/admin/category/delete/{{category._id}}" class="btn btn-danger" data-toggle="modal" data-target="#deleteConfirmModal">
                <i class="mdi mdi-delete"></i> {{__ "Delete"}}</a>
            <button type="submit" class="btn btn-primary">
                <i class="mdi mdi-check"></i> {{__ "Save"}}</button>
        </div>
        <div class="clearfix"></div>
    </div>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <div class="form-group{{#if errors.nameHasError}} has-danger{{/if}}">
                <label for="inputCategoryName">{{__ "Name"}}</label>
                <input name="category[name]" type="text" class="form-control" id="inputCategoryName" placeholder="Category name" value="{{category.name}}">
            </div>
            <div class="form-group">
                <label for="inputCategoryDescription">{{__ "Description"}}</label>
                <textarea name="category[description]" class="form-control js-summernote-control" id="inputCategoryDescription" rows="6">{{{category.description}}}</textarea>
            </div>
            <div class="form-group">
                <label for="inputCategoryCategory">{{__ "Parent category"}}</label>
                <select name="category[parent]" class="form-control" id="inputCategoryCategory">
                    {{#if category.parent}}
                    <option value="{{category.parent._id}}" selected>{{category.parent.name}}</option>
                    {{/if}}
                </select>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="inputCategorySlug">{{__ "Slug"}}</label>
                <input name="category[slug]" type="text" class="form-control" id="inputCategorySlug" placeholder="category-name" value="{{category.slug}}">
            </div>
            <div class="form-group">
                <label for="inputCategoryMetaTitle">{{__ "Meta Title"}}</label>
                <input name="category[meta][title]" type="text" class="form-control" id="inputCategoryMetaTitle" placeholder="Title" value="{{category.meta.title}}">
            </div>
            <div class="form-group">
                <label for="inputCategoryMetaDescription">{{__ "Meta Description"}}</label>
                <textarea name="category[meta][description]" class="form-control" id="inputCategoryMetaDescription" rows="3">{{category.meta.description}}</textarea>
            </div>
            <div class="form-group">
                <label>{{__ "Picture"}}</label> {{#if category.picture}}
                <div class="clearfix m-y-1">
                    {{#each category.picture}}
                        <img class="img-thumbnail" src="{{../pictUrl}}{{name}}" style="max-height: 320px;" />
                        <span class="img-thumbnail" style="display: inline-block;width: 2rem;height: 2rem;margin: .25rem;background-color: #{{color}};border: 1px solid;"></span>
                    {{/each}}
                </div>
                {{else}}
                <div class="clearfix"></div>
                {{/if}} {{!--
                <input type="hidden" name="category[picture]" value="{{category.picture}}" />--}}
                <label class="custom-file">
                    <input name="image" type="file" id="image" class="custom-file-input">
                    <span class="custom-file-control"></span>
                </label>
            </div>
        </div>
    </div>
</form>
<!-- Modal -->
<div class="modal fade" id="deleteConfirmModal" tabindex="-1" role="dialog" aria-labelledby="deleteConfirmModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteConfirmModalLabel">Are you sure?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                You are about to delete this category!
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <a href="#" class="btn btn-primary btn-ok">Ok</a>
            </div>
        </div>
    </div>
</div>