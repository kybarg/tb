<form class="row">
    <div class="col-md-6">
        <div class="form-group">
            <label for="inputProductName">Name</label>
            <input name="product[name]" type="text" class="form-control" id="inputProductName" placeholder="Product name">
        </div>
        <div class="form-group">
            <label for="inputProductDescription">Description</label>
            <textarea name="product[description]" class="form-control" id="inputProductDescription" rows="3"></textarea>
        </div>
        <div class="form-group">
            <label for="inputProductCategory">Categories</label>
            <select name="product[category]" class="form-control" id="inputProductCategory" multiple="multiple">
                <option>Женщине</option>
                <option>Одежда</option>
                <option>Блузки</option>
                <option>Свитера</option>
                <option>Колготки</option>
            </select>
        </div>
        <div class="form-group">
            <label for="inputProductVendor">Vendor</label>
            <select namd="product[vendor]" class="form-control" id="inputProductVendor">
                <option>Adidas</option>
                <option>Oodji</option>
                <option>Reebok</option>
                <option>Puma</option>
                <option>s'Olives</option>
            </select>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label for="inputProductPrice">Price</label>
                    <div class="input-group">
                        <input name="product[price]" type="text" class="form-control" id="inputProductPrice" placeholder="0.00">
                        <span class="input-group-addon">RUB</span>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label for="inputProductOldprice">Old price</label>
                    <div class="input-group">
                        <input name="product[oldprice]" type="text" class="form-control" id="inputProductOldprice" placeholder="0.00">
                        <span class="input-group-addon">RUB</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="form-group">
            <label for="inputProductUrl">Url</label>
            <input name="product[url]" type="text" class="form-control" id="inputProductUrl" placeholder="URL">
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label for="inputProductColor">Color</label>
                    <select namd="product[color]" class="form-control" id="inputProductColor" multiple="multiple">
                        <option>Белый</option>
                        <option>Розовый</option>
                        <option>Синий</option>
                        <option>Красный</option>
                        <option>Черный</option>
                    </select>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label for="inputProductMaterial">Material</label>
                    <select namd="productmaterial]" class="form-control" id="inputProductMaterial" multiple="multiple">
                        <option>Замш</option>
                        <option>Кожа</option>
                        <option>Кожзам.</option>
                        <option>Хлопок</option>
                        <option>Шерсть</option>
                    </select>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label for="inputProductSize">Size</label>
                    <select namd="product[size]" class="form-control" id="inputProductSize" multiple="multiple" size="9">
                        <option>XS</option>
                        <option>S</option>
                        <option>M</option>
                        <option>L</option>
                        <option>XL</option>
                        <option>XXL</option>
                        <option>XXXL</option>
                    </select>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label for="inputProductSeason">Season</label>
                    <select namd="product[season]" class="form-control" id="inputProductSeason">
                        <option>Демисезон</option>
                        <option>Мультисезон</option>
                        <option>Зима</option>
                        <option>Лето</option>
                        <option>Весна/Осень</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>Sex</label>
                    <div class="form-check">
                        <label class="form-check-label">
                            <input type="radio" class="form-check-input" name="product[sex]" id="optionsRadios1" value="0">
                            None
                        </label>
                    </div>
                    <div class="form-check">
                        <label class="form-check-label">
                            <input type="radio" class="form-check-input" name="product[sex]" id="optionsRadios2" value="1">
                            Toddler
                        </label>
                    </div>
                    <div class="form-check">
                        <label class="form-check-label">
                            <input type="radio" class="form-check-input" name="product[sex]" id="optionsRadios2" value="2">
                            Child
                        </label>
                    </div>
                    <div class="form-check">
                        <label class="form-check-label">
                            <input type="radio" class="form-check-input" name="product[sex]" id="optionsRadios2" value="3">
                            Adults
                        </label>
                    </div>
                </div>
            </div>
        </div>

        <div class="form-group">
            <label for="inputProductShop">Shop</label>
            <select namd="product[shop]" class="form-control" id="inputProductShop">
                <option>Lamoda</option>
                <option>Wildberries</option>
                <option>Quelle</option>
                <option>La Redoute</option>
                <option>KupiVip</option>
            </select>
        </div>


        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label for="inputProductAlias">Alias</label>
            <input name="product[alias]" type="text" class="form-control" id="inputProductAlias" placeholder="product-name-vendor-id">
        </div>
        <div class="form-group">
            <label for="inputProductMetaTitle">Meta Title</label>
            <input name="product[meta][title]" type="text" class="form-control" id="inputProductMetaTitle" placeholder="Title">
        </div>
        <div class="form-group">
            <label for="inputProductMetaDescription">Meta Description</label>
            <textarea name="product[meta][description]" class="form-control" id="inputProductMetaDescription" rows="3"></textarea>
        </div>
    </div>
</form>
